# Application
APP_NAME=ai-esg-reporting
DEBUG=False
LOG_LEVEL=INFO
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=.xlsx,.csv,.pdf

# Database
DATABASE_URL=postgresql://esg_user:esg_password@localhost:5432/esg_db
DB_ECHO=False

# Redis
REDIS_URL=redis://localhost:6379/0

# Groq API
GROQ_API_KEY=sk-...
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_TEMPERATURE=0.7
GROQ_MAX_TOKENS=2048

# Matching Thresholds
MATCHING_CONFIDENCE_THRESHOLD=0.80
MATCHING_REVIEW_THRESHOLD=0.85
MATCHING_LLM_THRESHOLD=0.70
